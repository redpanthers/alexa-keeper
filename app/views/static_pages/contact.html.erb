<%= render partial: 'layouts/header' %>
  <div class="container">

    <div class="row" style="padding-top:80px;padding-bottom:46px">
     <div class="col-md-6 col-md-offset-3">
      <h2 style="text-align:center">Contact Us</h2>
      <%= form_for (Contact.new) do |f| %>
     <div class="field" style="margin-left:14%">
            <%= f.label :name,"Name" %><br/>
            <%= f.text_field :name ,class: 'form-control' %>
        </div>

        <div class="field" style="margin-left:14%">
            <%= f.label :email ,"Email"%><br/>
            <%= f.email_field :email,  autofocus: true, class: 'form-control' %>
        </div>
 
        <div class="field" style="margin-left:14%">
            <%= f.label :message,"Message" %><br/>
            <%= f.text_area :message,class:'form-control', size: "67x6" %>
        </div>
       
       <br>
        <%= f.submit "Send", class: 'btn btn-success btn pull-right',style:'margin-right:13%' %>
        <% end %>
       
    
  </div>

</div>
  <div class="row" style="margin-left:40%;margin-top:4%;font-style:italic">
  <%= flash[:note]%>
</div>
</div>