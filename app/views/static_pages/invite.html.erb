<!-- Rankhub User Invite Page -->
<div class="container">
  <div class="row invite-section">
    <div class="col-md-4 col-md-offset-4">
      <h1> Request for Invite</h1>
      <marquee>
        <h5 class="text-center">Kindly enter your Name and E-mail address to get an exclusive invite for using RANKHUB</h5>
      </marquee>
      <%= form_for Invite.new, :url => invites_path(@user) do |f| %>
        <div class="field">
          <%= f.label :name,"Name" %><br/>
            <%= f.text_field :name ,class: 'form-control' %>
        </div>
        <div class="field">
          <%= f.label :email ,"Email"%><br/>
            <%= f.email_field :email,  autofocus: true, class: 'form-control'%>
              <%= f.hidden_field :accept, value: "true" %>
        </div>
        <div class="actions">
          <%= f.submit "Submit", class: "btn btn-success" %>
        </div>
        <% end %>
    </div>
  </div>
  <div class="row invite-flash-message">
    <% if flash[:note] %>
      <div class="alert alert-success">
        <%= flash[:note]%>
      </div>
      <% end %>
  </div>
</div>