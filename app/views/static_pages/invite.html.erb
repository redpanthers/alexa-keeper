<div class="container">
  <div class="row" style="padding-top:50px">
    
    <div class="col-md-4 col-md-offset-4">
      <h1 style="margin-bottom:30px;margin-left:10%;margin-top:25%"> Request for Invite</h1>
      <marquee><h5 style="text-align:center">Kindly enter your Name and E-mail address to get an exclusive invite for using RANKHUB</h5></marquee>

<%= form_for Invite.new, :url => invites_path(@user) do |f| %>

        <div class="field" style="margin-left:14%">
          <%= f.label :name,"Name" %><br/>
          <%= f.text_field :name ,class: 'form-control' %>
        </div>

        <div class="field" style="margin-left:14%">
          <%= f.label :email ,"Email"%><br/>
          <%= f.email_field :email,  autofocus: true, class: 'form-control'%>
          <%= f.hidden_field :accept, value: "true" %>
        </div>
          <div class="actions" style="padding-top:32px;padding-left:40%">
          <%= f.submit "Submit", class: "btn btn-success" %>
        </div>
<% end %>  
</div>
 
    </div>
    

<div class="row" style="margin-left:12%;margin-top:4%;font-style:italic">
  <%= flash[:note]%>
</div>
</div>

