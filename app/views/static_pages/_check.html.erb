<div class="row">
    <div class="col-md-6">
          <%= form_for (@collection) do |f| %>
            <%= f.label :name, "Create  a new collection" %>
            <%= f.text_field :name, class: "form-control" %>
            <%= f.hidden_field :user_id, value: current_user.id %>
            <%= f.submit "OK", class: 'btn btn-primary' %>          
          <% end %>
    </div>
</div>


    
      

    

