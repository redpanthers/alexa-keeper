<%= render partial: 'layouts/signup_nav' %>
<div class="container">
  <div class="row" style="padding-top:10%;padding-left:10%">
     <div class="col-md-6 col-md-offset-4">
<h2 style="margin-top:40px;margin-left:-10%"> Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
 
<div class="col-md-5">
  <div class="field" style="margin-right:-5%">
    <%= f.label :email %><br />
    <%= f.email_field :email, class:"form-control",autofocus: true %>
  </div>
</div>
  <br>
 
  <div class="actions" style="margin-top:15%;margin-left:5%">
    <%= f.submit " Reset password",class:'btn btn-success ' %>
  </div>
  <div id="pwd" style="margin-top:5%">
 <%= devise_error_messages! %>
</div>
<% end %>
</div>
</div>
</div>

 <%= render partial: 'layouts/foot_in' %>