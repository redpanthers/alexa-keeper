 <%= render partial: 'layouts/login_nav' %>
<div class="container">
<div class="row" style="padding-top:80px;padding-left:30%">
 <%= devise_error_messages! %>


    <div class="col-md-4 col-md-offset-2">
      <h1 style="padding-left:15%">Log In</h1>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { method: :post }) do |f| %>
        

        <div class="field">
            <%= f.label :email %><br/>
            <%= f.email_field :email,class:'form-control', autofocus: true %>
        </div>

        <div class="field">
            <%= f.label :password %><br/>
            <%= f.password_field :password,class:'form-control', autocomplete: "off" %>
        </div>

        <% if devise_mapping.rememberable? -%>
        <div class="field" style="padding-top:20px;padding-left:34%">
            <%= f.label :remember_me,class: "checkbox inline" do %>
              <%= f.check_box :remember_me %>
              <span>Remember me</span>
            <% end %>
        </div>
        <% end -%>

        <div class="actions" style="padding-top:20px;padding-left:20%">
            <%= f.submit "Log In", class: 'btn btn-success' %>
        </div>
        <% end %>

        <div class="row" style="padding-top:20px;padding-bottom:178px;padding-left:15%">

        <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
      </div>
    </div>

</div>
</div>
 
